@inject UserService UserService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand">@UserService.CurrentAccount.Username</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div id="NavBody" class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Profiles" Match="NavLinkMatch.All">
                <span aria-hidden="true">Profiles</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Edit Account">
                <span  aria-hidden="true">Edit Account</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Search">
                <span aria-hidden="true">Search</span>
            </NavLink>
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Chat">
                <span aria-hidden="true">Chat</span>
            </NavLink>
        </div>
    </nav>
    <nav>
        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="LogOut" href="" Match="NavLinkMatch.All">
                <span aria-hidden="true" >Log Out</span>
            </NavLink>
        </div>
    </nav>

</div>

@code {
    public void LogOut() => UserService.LogOf();
}